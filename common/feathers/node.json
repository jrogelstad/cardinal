                "format": "date",
                "isRequired": true
            },
            "status": {
                "description": "Status",
                "type": "string",
                "format": "enum",
                "isRequired": true,
                "dataList": [{
                    "value": "O",
                    "label": "Open"
                }, {
                    "value": "F",
                    "label": "Frozen"
                }, {
                    "value": "C",
                    "label": "Closed"
                }],
                "default": "O",
                "isReadOnly": true
            }
        }
    },
    {
        "name": "NodePeriodBalance",
        "plural": "NodePeriodBalance",
        "module": "Common",
        "inherits": "NodeBalance",
