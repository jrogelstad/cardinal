        "properties": {
            "parent": {
                "description": "Parent container",
                "type": {
                    "relation": "Container",
                    "properties": ["code", "description", "kind", "isUsed"],
                    "isRequired": true
                }
            }
        }
    },
    {
        "name": "NodeBalance",
        "plural": "NodeBalances",
        "module": "Common",
        "description": "Base class for hiearchy support",
        "inherits": "Node",
        "properties": {
            "balance": {
                "description": "Current quantity",
                "type": "number"
            },
            "unit": {
                "description": "Unit of measure",
                "type": {
                    "relation": "Unit",
                    "properties": ["code", "description"]
                },
                "isRequired": true,
                "default": {
                    "id": "each"
                }
            }
        }
    },
    {
        "name": "Period",
