    {
        "name": "Terms",
        "plural": "Termses",
        "module": "Common",
        "description": "Payment terms",
        "properties": {
            "code": {
                "description": "Code",
                "type": "string",
                "isRequired": true,
                "isUnique": true
            },
            "isActive": {
                "description": "Active status",
                "type": "boolean",
                "default": true
            },
            "policy": {
                "description": "Date calculation policy",
                "type": "string",
                "format": "enum",
                "dataList": [{
                        "value": "P",
                        "label": "Prepay"
                    }, {
                        "value": "I",
                        "label": "Immediate"
                    }, {
                        "value": "N",
                        "label": "Net"
                    }, {
                        "value": "D",
                        "label": "Day Of Month"
                }],
                "default": "P",
                "isRequired": true
            },
            "net": {
                "description": "Net days for payment",
                "type": "integer",
                "dataList": [0, 10, 15, 30, 60, 90]
            },
            "day": {
                "description": "Day of month",
                "type": "integer",
                "default": 1,
                "min": 1,
                "max": 31
            },
            "discountDays": {
                "description": "Early payment discount days",
                "type": "integer"
            },
            "discount": {
                "description": "Discount percent",
                "type": "number",
                "scale": 2
            },
            "isDepositRequired": {
                "description": "Deposit amount",
                "type": "boolean",
                "isRequired": true,
                "default": true,
                "alias": "depositRequired"
            },
            "depositPercent": {
                "description": "Deposit percent",
                "type": "number",
                "scale": 2,
                "default": 100
            },
            "depositAmount": {
                "description": "Deposit amount",
                "type": "object",
                "format": "money",
                "isRequired": true
            }
        }
    },
