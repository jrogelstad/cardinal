[
  {
    "name": "Balance",
    "module": "Ledger",
    "launchConfig": {
      "icon": "balance-scale",
      "settings": "ledgerSettings"
    },
    "defaultConfig": [
      {
        "name": "TrialBalance",
        "feather": "TrialBalance",
        "isEditModeEnabled": false,
        "list": {
          "columns": [{
              "attr": "parent.code",
              "label": "Code"
            }, {
              "attr": "parent.description",
              "label": "Description"
            }, {
              "attr": "parent.kind.type",
              "label": "Type"
            }, {
              "attr": "period.end",
              "label": "period"
            }, {
              "attr": "debits"
            }, {
              "attr": "credits"
            }, {
              "attr": "balance"
            }
          ],
          "filter": {
            "sort": [
                {
                    "property": "parent.code"
                },
                {
                    "property": "period.end"
                }
            ]
          }
        }
      },
      {
        "name": "GeneralLedger",
        "feather": "GeneralLedgerTransaction",
        "isEditModeEnabled": false,
        "list": {
          "columns": [{
              "attr": "number"
            }, {
              "attr": "date"
            }, {
              "attr": "amount"
            }, {
              "attr": "created"
            }, {
              "attr": "createdBy"
            }, {
              "attr": "currency"
            }
          ],
          "filter": {
            "sort": [
                {
                    "property": "number",
                    "order": "DESC"
                }
            ]
          }
        }
      },
      {
        "name": "GeneralJournal",
        "feather": "GeneralJournal",
        "isEditModeEnabled": false,
        "actions": [{
          "name": "Post",
          "title": "Post selected unposted journals to the ledger",
          "icon": "thumbtack",
          "method": "post",
          "authorization": "PostGeneralJournals",
          "validator": "postCheck"
        }, {
          "name": "Post all",
          "title": "Post all unposted journals to the ledger",
          "icon": "thumbtack",
          "method": "postAll",
          "authorization": "PostGeneralJournals",
          "hasSeparator": true
        }],
        "list": {
          "columns": [{
              "attr": "number"
            }, {
              "attr": "date"
            }, {
              "attr": "amount"
            }, {
              "attr": "created"
            }, {
              "attr": "createdBy"
            }, {
              "attr": "isPosted"
            }, {
              "attr": "currency"
            }
          ],
          "filter": {
            "sort": [
                {
                    "property": "number",
                    "order": "DESC"
                }
            ]
          }
        }
      },
      {
        "name": "Accounts",
        "feather": "LedgerAccount",
        "list": {
          "columns": [{
              "attr": "code"
            }, {
              "attr": "description"
            }, {
              "attr": "note"
            }, {
              "attr": "isParent"
            }, {
              "attr": "isUsed"
            }
          ],
          "filter": {
            "sort": [
                {
                    "property": "code",
                    "order": "ASC"
                }
            ]
          }
        }
      },
      {
        "name": "FiscalPeriods",
        "feather": "FiscalPeriod",
        "actions": [{
          "name": "Close",
          "title": "Close selected period",
          "icon": "toggle-off",
          "method": "close",
          "authorization": "CloseFiscalPeriod",
          "validator": "closeCheck"
        }, {
          "name": "Open",
          "title": "Open selected period",
          "icon": "toggle-on",
          "method": "open",
          "authorization": "OpenFiscalPeriod",
          "validator": "openCheck"
        }],
        "list": {
          "columns": [{
              "attr": "name"
            }, {
              "attr": "start"
            }, {
              "attr": "end"
            }, {
              "attr": "status"
            }
          ],
          "filter": {
            "sort": [
                {
                    "property": "parent.end",
                    "order": "DESC"
                },
                {
                    "property": "end",
                    "order": "ASC"
                }
            ]
          }
        }
      },
      {
        "name": "FiscalYears",
        "feather": "FiscalYear",
        "list": {
          "columns": [{
              "attr": "name"
            }, {
              "attr": "start"
            }, {
              "attr": "end"
            }, {
              "attr": "status"
            }
          ],
          "filter": {
            "sort": [
                {
                    "property": "end",
                    "order": "ASC"
                }
            ]
          }
        }
      }
    ]
  }
]
