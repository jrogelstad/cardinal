[
    {
        "name": "LedgerAccount",
        "plural": "LedgerAccounts",
        "module": "Ledger",
        "description": "Ledger accounts",
        "inherits": "Node",
        "properties": {
            "isParent": {
                "description": "Indicates account is a parent of other accounts",
                "type": "boolean",
                "isReadOnly": true,
                "isRequired": true,
                "default": false
            },
            "type": {
                "description": "Account type",
                "type": "string",
                "isRequired": true,
                "dataList": [{
                    "value": "A",
                    "label": "Asset"
                }, {
                    "value": "L",
                    "label": "Liability"
                }, {
                    "value": "R",
                    "label": "Revenue"
                }, {
                    "value": "E",
                    "label": "Expense"
                }, {
                    "value": "Q",
                    "label": "Equity"
                }]
            }
        },
        "overloads": {
            "parent": {
                "type": {
                    "relation": "LedgerAccount",
                    "properties": ["code", "description", "isUsed"]
                }
            }
        }
    },
    {
        "name": "AccountMapType",
        "plural": "AccountMapTypes",
        "module": "Ledger",
        "description": "Account map types for journal entries",
        "inherits": "Kind",
        "isReadOnly": true
    },
    {
        "name": "AccountMap",
        "plural": "AccountMaps",
        "module": "Ledger",
        "description": "General ledger account map for journals",
        "properties": {
            "type": {
                "description": "Account map type",
                "type": {
                    "relation": "AccountMapType",
                    "properties": ["code", "description"]
                }
            },
            "account": {
                "description": "Ledger account",
                "type": {
                    "relation": "LedgerAccount",
                    "properties": ["code", "description", "isParent"]
                }
            },
            "category": {
                "description": "category",
                "type": {
                    "relation": "Category",
                    "properties": ["code", "description"]
                }
            },
            "site": {
                "description": "Physcal office, warehouse or plant",
                "type": {
                    "relation": "Site",
                    "properties": ["code", "description"]
                }
            }
        }
    },
    {
        "name": "FiscalYear",
        "plural": "FiscalYears",
        "module": "Ledger",
        "description": "Fiscal year periods",
        "inherits": "Period"
    },
    {
        "name": "FiscalPeriod",
        "plural": "FiscalPeriods",
        "module": "Ledger",
        "description": "Fiscal periods",
        "inherits": "Period",
        "properties": {
            "parent": {
                "description": "Fiscal year",
                "isRequired": true,
                "type": {
                    "relation": "FiscalYear",
                    "properties": ["name", "start", "end"]
                }
            },
            "previous": {
                "description": "Previous period.",
                "type": {
                    "relation": "Period",
                    "properties": ["name","start","end","status"]
                },
                "isReadOnly": true
            },
            "next": {
                "description": "Next period.",
                "type": {
                    "relation": "Period",
                    "properties": ["name","start","end","status"]
                },
                "isReadOnly": true
            }
        }
    },
    {
        "name": "LedgerTransaction",
        "plural": "LedgerTransactions",
        "module": "Ledger",
        "description": "Abstract ledger transactions",
        "properties": {
            "currency": {
                "description": "Currency transaction is in",
                "type": {
                    "relation": "Currency",
                    "properties": ["code", "description", "minorUnit"]
                },
                "isRequired": true
            },
            "date": {
                "description": "Journal date",
                "type": "string",
                "format": "date",
                "default": "today()"
            },
            "note": {
                "description": "Note",
                "type": "string",
                "format": "textArea"
            },
            "isPosted": {
                "description": "Transaction is complete",
                "type": "boolean",
                "default": false,
                "isReadOnly": true
            },
            "number": {
                "description": "Journal number",
                "isReadOnly": true,
                "type": "string",
                "autonumber": {
                    "prefix": "GJ",
                    "sequence": "gj_seq_num",
                    "length": 5
                },
                "isUnique": true
            },
            "reference": {
                "description": "Reference to source document",
                "type": "string"
            },
            "folio": {
                "description": "Reference to ledger posting",
                "type": "string"
            },
            "amount": {
                "description": "Total amount",
                "type": "object",
                "format": "money",
                "isReadOnly": true
            }
        }
    },
    {
        "name": "LedgerDistribution",
        "plural": "LedgerDistributions",
        "module": "Common",
        "description": "Ledger distribution",
        "properties": {
            "parent": {
                "description": "Parent",
                "type": {
                    "relation": "LedgerTransaction",
                    "childOf": "distributions"
                }
            },
            "account": {
                "description": "Ledger account",
                "type": {
                    "relation": "LedgerAccount",
                    "properties": ["code", "description", "type"]
                },
                "isRequired": true
            },
            "debit": {
                "description": "Debit",
                "type": "object",
                "format": "money",
                "isRequired": true
            },
            "credit": {
                "description": "Credit",
                "type": "object",
                "format": "money",
                "isRequired": true
            }
        }
    },
    {
        "name": "Journal",
        "plural": "Journals",
        "module": "Ledger",
        "description": "Journal entries",
        "inherits": "LedgerTransaction"
    },
    {
        "name": "GeneralJournal",
        "plural": "GeneralJournals",
        "module": "Ledger",
        "description": "General journal entries",
        "inherits": "Journal"
    },
    {
        "name": "GeneralLedgerTransaction",
        "plural": "GeneralLedgerTransactions",
        "module": "Ledger",
        "description": "General ledger entries",
        "inherits": "LedgerTransaction",
        "isReadOnly": true,
        "properties": {
            "number": {
                "description": "General ledger number",
                "isReadOnly": true,
                "type": "string",
                "autonumber": {
                    "prefix": "GL",
                    "sequence": "gl_seq_num",
                    "length": 5
                },
                "isUnique": true,
                "inheritedFrom": "Transaction"
            },
            "parent": {
                "description": "Parent action",
                "type": {
                    "relation": "Journal",
                    "properties": ["currency", "date"]
                }
            }
        }
    },
    {
        "name": "TrialBalance",
        "plural": "TrialBalances",
        "inherits": "Container",
        "module": "Ledger",
        "description": "Amount of currency in ledger accounts per period",
        "isReadOnly": true,
        "properties": {
            "parent": {
                "description": "Ledger Account",
                "type": {
                    "relation": "LedgerAccount",
                    "properties": ["code", "description", "type"],
                    "isRequired": true
                }
            },
            "currency": {
                "type": {
                    "relation": "Currency",
                    "properties": ["code", "description"]
                }
            },
            "balance": {
                "description": "Current amount",
                "type": "object",
                "format": "money",
                "isRequired": true
            },
            "unit": {
                "description": "Unit of measure",
                "type": {
                    "relation": "Unit",
                    "properties": ["code", "description"]
                },
                "isRequired": true,
                "default": {
                    "id": "each"
                }
            },
            "period": {
                "description": "Period",
                "type": {
                    "relation": "Period",
                    "properties": ["name", "start", "end", "status"]
                }
            },
            "debits": {
                "description": "Sum of debits in the period",
                "type": "object",
                "format": "money",
                "isRequired": true
            },
            "credits": {
                "description": "Sum of credits in the period",
                "type": "object",
                "format": "money",
                "isRequired": true
            },
            "previous": {
                "description": "Previous node period balance",
                "type": {
                    "relation": "NodePeriodBalance",
                    "properties": ["balance"]
                }
            }
        }
    },
    {
        "name": "BillSubledger",
        "plural": "BillSubledgers",
        "module": "Common",
        "inherits": "BillOrder",
        "description": "Subledger for billing records",
        "properties": {
            "dueDate": {
                "description": "Date payment is due",
                "type": "string",
                "format": "date",
                "default": "today()",
                "isRequired": true
            },
            "isPosted": {
                "description": "Is posted flag",
                "type": "boolean",
                "isReadOnly": true,
                "default": false
            },
            "postedDate": {
                "description": "Posted date",
                "type": "string",
                "format": "date",
                "isReadOnly": true,
                "default": null
            },
            "paid": {
                "description": "Amount currently paid",
                "type": "object",
                "format": "money",
                "isReadOnly": true
            },
            "balance": {
                "description": "Amount currently due in document currency",
                "type": "object",
                "format": "money",
                "isReadOnly": true
            },
            "baseBalance": {
                "description": "Amount currently due in base currency",
                "type": "object",
                "format": "money",
                "isReadOnly": true
            },
            "journal": {
                "description": "Reference to journal",
                "type": {
                    "relation": "Journal",
                    "properties": ["number", "reference", "isPosted"]
                }
            }
        },
        "overloads": {
            "status": {
                "description": "Document status",
                "type": "string",
                "default": "U",
                "isReadOnly": true,
                "format": "enum",
                "dataList": [
                    {
                        "value": "U",
                        "label": "Unposted"
                    },
                    {
                        "value": "O",
                        "label": "Open"
                    },
                    {
                        "value": "C",
                        "label": "Closed"
                    }
                ]
            }
        }
    }
]
