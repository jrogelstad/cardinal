    {
        "name": "LedgerTransaction",
        "plural": "LedgerTransactions",
        "module": "Ledger",
        "description": "Abstract ledger transactions",
        "properties": {
            "currency": {
                "description": "Currency transaction is in",
                "type": {
                    "relation": "Currency",
                    "properties": ["code", "description", "minorUnit"]
                },
                "isRequired": true
            },
            "date": {
                "description": "Journal date",
                "type": "string",
                "format": "date",
                "default": "today()"
            },
            "note": {
                "description": "Note",
                "type": "string"
            },
            "isPosted": {
                "description": "Transaction is complete",
                "type": "boolean",
                "default": false,
                "isReadOnly": true
            },
            "number": {
                "description": "Journal number",
                "isReadOnly": true,
                "type": "string",
                "autonumber": {
                    "prefix": "GJ",
                    "sequence": "gj_seq_num",
                    "length": 5
                },
                "isUnique": true
            },
            "reference": {
                "description": "Reference to source document",
                "type": "string"
            },
            "folio": {
                "description": "Reference to ledger posting",
                "type": "string"
            },
            "amount": {
                "description": "Total amount",
                "type": "object",
                "format": "money",
                "isReadOnly": true
            }
        }
    },
    {
        "name": "LedgerDistribution",
        "plural": "LedgerDistributions",
