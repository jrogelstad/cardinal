                }
            },
            "account": {
                "description": "Ledger account",
                "type": {
                    "relation": "LedgerAccount",
                    "properties": ["code", "description", "kind"]
                },
                "isRequired": true
            },
            "debit": {
                "description": "Debit",
                "type": "object",
                "format": "money",
                "isRequired": true
            },
            "credit": {
                "description": "Credit",
                "type": "object",
                "format": "money",
                "isRequired": true
            }
