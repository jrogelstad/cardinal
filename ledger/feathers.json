    },
    {
        "name": "GeneralJournal",
        "plural": "GeneralJournals",
        "module": "Ledger",
        "description": "General journal entries",
        "inherits": "Journal"
    },
    {
        "name": "GeneralLedgerTransaction",
        "plural": "GeneralLedgerTransactions",
        "module": "Ledger",
        "description": "General ledger entries",
        "inherits": "LedgerTransaction",
        "isReadOnly": true,
        "properties": {
            "number": {
                "description": "General ledger number",
                "isReadOnly": true,
                "type": "string",
                "autonumber": {
                    "prefix": "GL",
                    "sequence": "gl_seq_num",
                    "length": 5
                },
                "isUnique": true,
                "inheritedFrom": "Transaction"
            },
            "parent": {
                "description": "Parent action",
                "type": {
                    "relation": "Journal",
                    "properties": ["currency", "date"]
                }
            }
        }
    },
    {
        "name": "TrialBalance",
        "plural": "TrialBalances",
        "inherits": "Node",
        "module": "Ledger",
        "description": "Amount of currency in ledger accounts per period",
        "isReadOnly": true,
        "properties": {
            "balance": {
                "description": "Current amount",
                "type": "object",
                "format": "money",
                "isRequired": true
            },
            "unit": {
                "description": "Unit of measure",
                "type": {
                    "relation": "Unit",
                    "properties": ["code", "description"]
                },
                "isRequired": true,
                "default": {
                    "id": "each"
                }
            },
            "period": {
                "description": "Period",
                "type": {
                    "relation": "Period",
                    "properties": ["name", "start", "end", "status"]
                }
            },
            "debits": {
                "description": "Sum of debits in the period",
                "type": "object",
                "format": "money",
                "isRequired": true
            },
            "credits": {
                "description": "Sum of credits in the period",
                "type": "object",
                "format": "money",
                "isRequired": true
            },
            "previous": {
                "description": "Previous node period balance",
                "type": {
                    "relation": "NodePeriodBalance",
                    "properties": ["balance"]
                }
            }
        },
        "overloads": {
            "kind": {
                "type": {
                    "relation": "Currency",
                    "properties": ["code", "description", "type"]
                },
                "alias": "Currency"
            },
            "parent": {
                "type": {
                    "relation": "LedgerAccount",
                    "properties": ["code", "description", "kind", "isUsed"]
                },
                "alias": "Account"
            }
        }
    }
