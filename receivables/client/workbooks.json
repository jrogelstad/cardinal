[
  {
    "name": "Collect",
    "module": "Receivables",
    "launchConfig": {
      "icon": "sign-in-alt"
    },
    "defaultConfig": [{
        "name": "Invoices",
        "isEditModeEnabled": false,
        "feather": "Invoice",
        "actions": [{
          "name": "Post",
          "title": "Post selected unposted invoices",
          "icon": "thumbtack",
          "method": "post",
          "authorization": "PostReceivables",
          "validator": "postCheck"
        }, {
          "name": "Post all",
          "title": "Post all unposted invoices",
          "icon": "thumbtack",
          "method": "postAll",
          "authorization": "PostReceivables",
          "hasSeparator": true
        }],
        "list": {
            "columns": [{
              "attr": "number"
            }, {
              "attr": "customer"
            }, {
              "attr": "customer.description"
            }, {
              "attr": "total"
            }, {
              "attr": "docDate"
            }, {
              "attr": "dueDate"
            }, {
              "attr": "postedDate"
            }, {
              "attr": "status"
            }],
            "filter": {
                "criteria": [{
                    "property": "status",
                    "operator": "!=",
                    "value": "C"
                }],
                "sort": [{
                    "property": "dueDate",
                    "order": "ASC"
                }, {
                    "property": "number",
                    "order": "ASC"
                }]
            }
        }
    },
    {
        "name": "CreditMemos",
        "isEditModeEnabled": false,
        "feather": "CreditMemo",
        "actions": [{
          "name": "Post",
          "title": "Post selected unposted credit memos",
          "icon": "thumbtack",
          "method": "post",
          "authorization": "PostReceivables",
          "validator": "postCheck"
        }, {
          "name": "Post all",
          "title": "Post all unposted credit memos",
          "icon": "thumbtack",
          "method": "postAll",
          "authorization": "PostReceivables",
          "hasSeparator": true
        }],
        "list": {
            "columns": [{
              "attr": "number"
            }, {
              "attr": "customer"
            }, {
              "attr": "customer.description"
            }, {
              "attr": "total"
            }, {
              "attr": "docDate"
            }, {
              "attr": "dueDate"
            }, {
              "attr": "postedDate"
            }, {
              "attr": "status"
            }],
            "filter": {
                "criteria": [{
                    "property": "status",
                    "operator": "!=",
                    "value": "C"
                }],
                "sort": [{
                    "property": "dueDate",
                    "order": "ASC"
                }, {
                    "property": "number",
                    "order": "ASC"
                }]
            }
        }
    },
    {
        "name": "Journals",
        "feather": "ReceivablesJournal",
        "actions": [{
          "name": "Post",
          "title": "Post selected unposted journals to the ledger",
          "icon": "thumbtack",
          "method": "post",
          "authorization": "PostJournals",
          "validator": "postCheck"
        }, {
          "name": "Post all",
          "title": "Post all unposted journals to the ledger",
          "icon": "thumbtack",
          "method": "postAll",
          "authorization": "PostJournals",
          "hasSeparator": true
        }],
        "list": {
          "columns": [{
              "attr": "number"
            }, {
              "attr": "date"
            }, {
              "attr": "amount"
            }, {
              "attr": "isPosted"
            }
          ],
          "filter": {
            "sort": [{
                "property": "isPosted",
                "order": "DESC"
            }, {
                "property": "number",
                "order": "DESC"
            }]
          }
        }
      },
    {
        "name": "Customers",
        "feather": "Customer",
        "list": {
          "columns": [{
              "attr": "code"
            }, {
              "attr": "description"
            }, {
              "attr": "creditStatus"
            }, {
              "attr": "terms.code",
              "label": "Terms"
            }, {
              "attr": "contact.fullName"
            }, {
              "attr": "contact.phone"
            }, {
              "attr": "contact.email"
            }, {
              "attr": "billTo.city"
            }, {
              "attr": "billTo.state"
            }
          ],
          "filter": {
            "criteria": [{
                "property": "isActive",
                "value": true
            }],
            "sort": [{
                "property": "code"
            }]
          }
        }
      }
    ]
  }
]
